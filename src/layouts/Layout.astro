---
/**
 * Główny layout dla projektu Piazza Virtuale (Astro)
 * WARIANT A: Używa eksperymentalnej Fonts API dla optymalnej performance
 */

// Importuj globalne style CSS
import '../styles/reset.css';
import '../styles/globals.css';

// Importuj komponent Font z Astro
import { Font } from 'astro:assets';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'Piazza Virtuale - Twój wirtualny rynek'
} = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Astro Fonts API - automatycznie zarządzane i optymalizowane fonty -->
    <!-- Preload najważniejszych fontów dla szybszego ładowania -->
    <Font cssVariable="--font-sans" preload />
    <Font cssVariable="--font-futura" preload />
    <Font cssVariable="--font-serif" />
    <Font cssVariable="--font-didot" />

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  /* Ustaw domyślny font dla body */
  body {
    font-family: var(--font-sans);
    color: var(--refined-text-primary, #2c2f2a);
    background-color: var(--content-bg, #ffffff);
  }

  /* Typografia dla nagłówków */
  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-futura);
    font-weight: 600;
    line-height: 1.25;
  }

  /* Artykuły używają czcionki serif */
  article {
    font-family: var(--font-serif);
    line-height: 1.75;
  }

  /* Link typography */
  a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  a:hover {
    color: var(--refined-accent-gold);
  }
</style>
